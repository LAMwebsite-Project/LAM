<!DOCTYPE html>
<html lang=<%= lang%>>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/global/global') %>
    <title><%= title%></title>
    <link rel="stylesheet" href="/resources/homepage/homepage.css">
</head>
<body>
    <%- include('../partials/navbar/navbar') %>

<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <div class="numbertext">1 / 4</div>
      <img src="/resources/slideshowimages/galleryimg1.jpeg" alt="three sculpt heads" height="auto" style="width:100vw">
      <div class="text"><%= SlideText1%></div>
    </div>
  
    <div class="mySlides fade">
      <div class="numbertext">2 / 4</div>
      <img src="/resources/slideshowimages/galleryimg2.jpg" alt="Art gallery" height="auto" style="width:100vw">
      <div class="text"><%= SlideText2%></div>
    </div>
  
    <div class="mySlides fade">
      <div class="numbertext">3 / 4</div>
      <img src="/resources/slideshowimages/galleryimg3.jpg" alt="Fruit table" height="auto" style="width:100vw">
      <div class="text"><%= SlideText3%></div>
    </div>
  
    <div class="mySlides fade">
        <div class="numbertext">4 / 4</div>
        <img src="/resources/slideshowimages/galleryimg4.jpg" alt="LAM building" height="auto" style="width: 100vw">
        <div class="text"><%= SlideText4%></div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>
  
  <!-- The dots/circles -->
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
    <span class="dot" onclick="currentSlide(4)"></span>
</div>

<div class="homepage-buttons">
    <button class="homepage-button" id="homepage-quiz">
        <%= homepageQuizText%>
    </button>
    <button class="homepage-button" id="homepage-tickets">
        <%=homepageTickets%>
    </button>
</div>

<div class="flex-container">
    <video controls>
        <source src="/resources/videos/LAM1.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="infobox"><h1><%= videoHeader%></h1>
        <p><%= videoInformation%></p>
        <p><%= videoInformation2%></p>
        <p><%= videoInformation3%></p>
        <p id="later"><strong><%= videoInformation4%></strong></p>
        <br>
        <p><%= qoutes1%></p>
        <p><%= qoutes2%></p>
        <br>
        <p><%= qoutes3%></p>
        <p><%= qoutes4%></p>
    </div>
</div>

<script src="resources/homepage/homepage.js"></script>

    <%- include('../partials/footer/footer') %>
</body>
</html>